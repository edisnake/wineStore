{% extends 'base.html.twig' %}

{% block title %}Wine Feed{% endblock %}

{% block body %}
    <div class="container">
        <h1>Wine Feed DB List</h1>

        {{ include('main/_wine_feed_db.html.twig') }}

        <div class="row">
            <div class="p-4 col-lg-2 text-center">
                <a id="importFeed" class="btn btn-primary" href="{{ path('import') }}">Import RSS Wine Feed</a>
            </div>
            <div class="col-lg-1"></div>
            <div class="p-4 col-lg-2 text-center">
                <a id="orderWine" class="btn btn-primary" href="{{ path('orderRandomWine') }}">Order Random Wine</a>
            </div>
            <div class="col-lg-1"></div>
            <div class="p-4 col-lg-2 text-center">
                <a id="orderWine" class="btn btn-primary" href="{{ path('wine_feed_index') }}">Wine Feed CRUD</a>
            </div>
        </div>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}

